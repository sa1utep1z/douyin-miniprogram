.tab-top {
  display: flex;
}
.tab {
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  background-color: #c93d3d;
  color: white;
  text-align: center;
  padding: 5rpx 10rpx;
  white-space: nowrap; /* 防止内容换行，使内容在一行内显示 */
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bolder;
  border-radius: 12rpx;
}
.tab-active {
  background-color: #f56363;
  color: white;
}
