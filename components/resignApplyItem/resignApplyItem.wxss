/* pages/registration/registrationItem/registrationItem.wxss */
.list-item {
  width: 686rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin: 20rpx 32rpx 0 32rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.item-position {
  position: relative;
}
.item-position-shape-success {
  position: absolute;
  top: -50px;
  right: -50px;
  width: 0;
  height: 0;
  border: 50px solid #5bbd72;
  border-bottom-color: transparent;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotateZ(135deg);
}
.item-position-shape-prepare {
  position: absolute;
  top: -50px;
  right: -50px;
  width: 0;
  height: 0;
  border: 50px solid #fac221;
  border-bottom-color: transparent;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotateZ(135deg);
}
.item-position-shape-fail {
  position: absolute;
  top: -50px;
  right: -50px;
  width: 0;
  height: 0;
  border: 50px solid #fc3536;
  border-bottom-color: transparent;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotateZ(135deg);
}
.item-position-shape-cancel {
  position: absolute;
  top: -50px;
  right: -50px;
  width: 0;
  height: 0;
  border: 50px solid #f6c48c;
  border-bottom-color: transparent;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotateZ(135deg);
}
.item-position-text {
  content: "";
  width: 60px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
  color: #FFF;
  font-family: PingFangSC-Medium, PingFang SC;
  transform: rotate(45deg);
  position: absolute;
  right: 0px;
  top: 12px;
  cursor: pointer;
}
.item-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  box-sizing: border-box;
}
.job-title {
  flex: 1;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
  margin-right: 72rpx;
}
.job-price {
  font-size: 32rpx;
  font-family: Roboto-Bold, Roboto;
  font-weight: bold;
  color: #FF830B;
