/* components/SignUpInfoDialog/SignUpInfoDialog.wxss */
page{
  width: 100%;
  height: 100%;
  z-index: 999;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.5);
}
.dialog {
  width: 640rpx;
  background: white;
  border-radius: 12px;
  box-sizing: border-box;
}
.dialog-content {
  padding: 0 48rpx;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
}
.dialog-title {
  width: 544rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  text-align: center;
  margin-top: 64rpx;
  line-height: 50rpx;
}
.info-view {
  width: 544rpx;
  height: 80rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  margin-top: 32rpx;
  flex-direction: row;
  margin-top: 32rpx;
  align-items: center;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}
.input-view-required {
  width: 544rpx;
  height: 80rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  margin-top: 32rpx;
  align-items: center;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}
.input-view-input {
  width: 324rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  caret-color: #999999;
  margin-left: 10rpx;
  line-height: 40rpx;
}
.input-view-placeholder {
  color: #999999;
}
.input-view-label {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E43700;
  line-height: 40rpx;
}
.action-row {
  width: 100%;
  height: 80rpx;
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
}
.action-view {
  width: 338rpx;
  height: 80rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}
.action-input {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}
.action-button {
  width: 186rpx !important;
  height: 78rpx !important;
  text-align: center;
  background: #018EFF !important;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 80rpx;
  padding: 0 !important;
}
.van-divider {
  height: 2rpx;
  width: 100%;
  background-color: #f8f8f8;
  margin-top: 64rpx;
}
.btn-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.btn-cancel{
  width: 288rpx;
  height: 110rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  text-align: center;
  line-height: 110rpx;
  letter-spacing: 2rpx;
}
.btn-confirm{
  width: 288rpx;
  height: 110rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #018EFF;
  line-height: 110rpx;
  text-align: center;
  letter-spacing: 2rpx;
}

button[disabled]{
  width: 186rpx !important;
  height: 78rpx !important;
  text-align: center;
  background: white !important;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 80rpx;
  padding: 0 !important;
}
.divider {
  height: 110rpx;
  width: 2rpx;
  background-color: #f8f8f8;
}
