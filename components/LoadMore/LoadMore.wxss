/* components/LoadMore/LoadMore.wxss */
.message {
  display: block;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 10rpx 0;
  line-height: 24px;
}
.loading-box {
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal {
  width: 36rpx;
  height: 36rpx;
  position: relative;
  margin-right: 15rpx;
}
.modal .line .item {
  position: absolute;
  left: 50%;
  top: 0;
  width: 3rpx;
  height: 36rpx;
}
.modal .line .item::before, .modal .line .item::after {
  content: '';
  display: block;
  height: 50%;
  background:#9B999A;
  border-radius: 5rpx;
}
.modal .line .item:nth-child(2) {
  transform: rotate(30deg);
}
.modal .line .item:nth-child(3) {
  transform: rotate(60deg);
}
.modal .line .item:nth-child(4) {
  transform: rotate(90deg);
}
.modal .line .item:nth-child(5) {
  transform: rotate(120deg);
}
.modal .line .item:nth-child(6) {
  transform: rotate(150deg);
}
.modal .circlebg {
  position: absolute;
  left: 50%;
  top: 50%;
  width:18rpx;
  height:18rpx;
  margin:-9rpx 0 0 -9rpx;
  background:#f7f7f7;
  border-radius:18rpx;
} 
@keyframes load {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.modal .line .item:nth-child(1):before {
  animation: load 1.2s linear 0s infinite;
}
.modal .line .item:nth-child(2):before {
  animation: load 1.2s linear 0.1s infinite;
}
.modal .line .item:nth-child(3):before {
  animation: load 1.2s linear 0.2s infinite;
}
.modal .line .item:nth-child(4):before {
  animation: load 1.2s linear 0.3s infinite;
}
.modal .line .item:nth-child(5):before {
  animation: load 1.2s linear 0.4s infinite;
}
.modal .line .item:nth-child(6):before {
  animation: load 1.2s linear 0.5s infinite;
}
.modal .line .item:nth-child(1):after {
  animation: load 1.2s linear 0.6s infinite;
}
.modal .line .item:nth-child(2):after {
  animation: load 1.2s linear 0.7s infinite;
}
.modal .line .item:nth-child(3):after {
  animation: load 1.2s linear 0.8s infinite;
}
.modal .line .item:nth-child(4):after {
  animation: load 1.2s linear 0.9s infinite;
}
.modal .line .item:nth-child(5):after {
  animation: load 1.2s linear 1s infinite;
}
.modal .line .item:nth-child(6):after {
  animation: load 1.2s linear 1.1s infinite;
}
