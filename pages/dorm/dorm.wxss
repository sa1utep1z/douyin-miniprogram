/* pages/resignApply/resignApply.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}
.button-group {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 120rpx;
  background-color: #ffffff;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}
.button-item {
  flex: 1;
  color: #ffffff;
  text-align: center;
  background-color: #2c9eea;
  margin: 0 50rpx;
  padding: 5rpx 0;
  border-radius: 10rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;

}
.container {
  width: 100%;
  display: flex;
  padding-top: 10rpx;
  flex-direction: column;
  align-items: center;
  margin-bottom: 400rpx;
}
.scroll-view {
  position: fixed;
  top: 120rpx;
  left: 0;
  width: 100%;
  max-height: 1600rpx;
  padding-bottom: 400rpx;
}
.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}
.data-none {
  color: #999999;
  height: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: center;
  padding-top: 30rpx;
}

/* 弹窗 */
.dialog-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.5);
}
.dialog {
  width: 686rpx;
  background: white;
  border-radius: 12px;
  box-sizing: border-box;
}
.dialog-content {
  padding: 0 48rpx;
  width: 100%;
  max-height: 66vh;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  background: #F8F8F8;
  margin-bottom: 20rpx;
}
.dialog-title {
  width: 640rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  text-align: center;
  margin: 48rpx 0 12rpx 0;
  line-height: 50rpx;
}
.input-view-required {
  width: 640rpx;
  min-height: 60rpx;
  line-height: 60rpx;
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  margin: 12rpx 0 6rpx 0;
  align-items: center;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.input-view-label {
  flex: 1;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
}
.input-view-text {
  flex: 3;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
}
.van-divider {
  height: 2rpx;
  width: 100%;
  background-color: #f8f8f8;
  margin-top: 64rpx;
}
.btn-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.btn-confirm{
  flex: 1;
  width: 288rpx;
  height: 110rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: white;
  line-height: 110rpx;
  text-align: center;
  letter-spacing: 2rpx;
}
.image-view {
  float: left;
  position: relative;
  margin-right: 24rpx;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.image-view .active-img {
  width: 120rpx;
  height: 120rpx;
}

.image-view .delete-img {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -20rpx;
  right: -15rpx;
}

.chooseImage {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F5F5F5;
}

.chooseImage>image {
  width: 58rpx;
  height: 58rpx;
}