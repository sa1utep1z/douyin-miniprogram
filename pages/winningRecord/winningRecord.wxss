/* pages/member/member.wxss */
page{
  width: 100%;
  height: 100%;
  background-color:#FFFFFF;
}
.member-container {
  width: 100%;
  background: #FFFFFF;
}

.scroll-view {
  width: 90%;
  margin: 0 auto;
  max-height: 1600rpx;
}

.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}
.van-divider-container {
  width: 100%;
  display: block;
}
.recommend-view {
  width: 686rpx;
  background: #FFFFFF;
  padding:24rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  margin: 32rpx 32rpx 0 32rpx;

}
.recommend-title {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
}
.recommend-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
  align-items: center;
  justify-content: space-between;
}
.member-phone {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: #018EFF;
}

.member-view {
  background-color: #f8f8f8;
  box-sizing: border-box;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
}
.member-row {
  width: 100%;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.member-text {
  flex: 1;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: bolder;
  color: #333333;
  line-height: 40rpx;
}
.member-value {
  flex: 2;
  text-align: left;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}