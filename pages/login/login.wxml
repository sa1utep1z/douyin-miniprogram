    <view class="brand-company">众鼎人力</view>
    <view class="brand-slogan">天天好工作，天天领日薪</view>
  </view>
  <image src="../../assets/images/login/img_logo.png" class="logo"></image>
  <button class="login-wechat-btn" bindtap="register" disabled="{{!agreePact}}">微信一键登录</button>
