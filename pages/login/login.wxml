    <switch type="checkbox" checked="{{agreePact}}" bindchange="switchAgreePact"/>
    <text>登录代表您已同意</text><text class="law-text-blue" bindtap="jumpPrivacy" >众鼎人力用户协议、隐私协议</text>
  </view>
</view>
