/* pages/workMessage/workMessage.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}
.container {
  width: 100%;
  height: 100%;
}
.scroll-view {
  width: 100%;
  height: 100%;
}
.message-box {
  width: 686rpx;
  height: 196rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
  margin: 20rpx 32rpx 0 32rpx;
  position: relative;
}
.message-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.message-titile {
  flex: 1;
  min-width:192rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
}
.message-date {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}
.message-content {
  width: 638rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  margin-top: 24rpx;
}
.message-titile-unread {
  min-width:192rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
  position: relative;
}
.read-dot {
  width: 10rpx;
  height: 10rpx;
  background: #E43700;
  border-radius: 50%;
  position: absolute;
  top: 12rpx;
  right: 12rpx;
}
.empty-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.empty-image {
  width: 400rpx;
  height: 352rpx;
  margin-top: 270rpx;
}
.empty-text {
  height: 44rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 44rpx;
  margin-top: 30rpx;
}

.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}