/* pages/message/message.wxss */
.page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
}
.message-row {
  width: 100%;
  display: flex;
  padding: 40rpx 32rpx;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.message-item-image {
  width: 96rpx;
  height: 96rpx;
}
.message-inner-column {
  width: 562rpx;
  margin-left: 28rpx;
}
.message-row-between {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.message-item-title {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #222222;
  line-height: 44rpx;
}
.message-item-date {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 24rpx;
}
.message-item-content {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  overflow: auto;
  margin-top: 12rpx;
  text-overflow: ellipsis;
}
.message-item-badge {
  background: #E43700;
  border-radius: 24rpx;
  min-width: 32rpx;
  font-size: 20rpx;
  padding: 2rpx 2rpx;
  text-align: center;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 32rpx;
  position: absolute;
  left: 100rpx;
  top: 32rpx;
}
.van-divider {
  margin: 0 !important;
  width: 562rpx !important;
  margin-left: 156rpx !important;
  background-color: #F8F8F8 !important;
}