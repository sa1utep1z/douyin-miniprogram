/* pages/member/member.wxss */
page{
  width: 100%;
  height: 100%;
  background-color:#FFFFFF;
}
.member-container {
  width: 100%;
  background: #FFFFFF;
}
/* tab样式 开始 */
.tab-view {
  /* position: fixed; */
  top: 0;
  left: 0;
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 24rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab-item-title {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 44rpx;
}
.tab-item-sub {
  height: 28rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 28rpx;
}
.tab-item-sub-active {
  height: 28rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  padding: 0 8rpx;
  line-height: 28rpx;
  background: #018EFF;
  box-sizing: border-box;
  border-radius: 14rpx;
}
.tab-title-normal {
  color: #333333;
}
.tab-title-active {
  color: #018EFF;
  font-weight: bolder;
}
/* tab样式 结束 */

.share-view {
  width: 100%;
  background: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
 }
 .share-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 32rpx;
}
.record-text {
  flex: 1;
  height: 52rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #666666;
  text-align: center;
  line-height: 52rpx;
}
.record-title {
  font-weight: bolder;
  font-size: 28rpx;
}
.record-content {
  font-size: 26rpx;
}
.scroll-view {
  width: 100%;
  max-height: 1200rpx;
}

 .status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}


/* 弹窗 */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.5);
}
.dialog {
  width: 686rpx;
  background: white;
  border-radius: 12px;
  box-sizing: border-box;
}
.dialog-content {
  padding: 0 48rpx;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
}
.dialog-title {
  width: 640rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  text-align: center;
  margin: 48rpx 0 12rpx 0;
  line-height: 50rpx;
}
.input-view-required {
  width: 640rpx;
  height: 80rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  margin-top: 12rpx;
  align-items: center;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}
.input-view-label {
  flex: 1;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
}
.input-view-text {
  flex: 2;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
}
.van-divider {
  height: 2rpx;
  width: 100%;
  background-color: #f8f8f8;
  margin-top: 64rpx;
}
.btn-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.btn-confirm{
  flex: 1;
  width: 288rpx;
  height: 110rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #018EFF;
  line-height: 110rpx;
  text-align: center;
  letter-spacing: 2rpx;
}
/* 进度弹窗 */
.cardBox {
  width: 640rpx;
  min-height: 75px;
  max-height: 800rpx;
  overflow-y: auto;
	margin: 0 auto;
	color: #000000;
	font-size: 14px;
	display: flex;
	flex-direction: column;
  position: relative;
  margin-top: 20rpx;
}
.stepBox {
  width: 90%;
  height: 100%;
  margin: 0 auto;
  font-size: 12px;
}
.step {
  display: flex;
  height: 100%;
}
.stepLeft {
  position: relative;
  z-index: 99;
}
.stepLeft .num{
  position: relative;
  height: 60rpx;
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  color: #1890FF;
  background-color: #D0E8FF;
  z-index: 999;
}
.stepLeft .line{
  height: 100%;
  background-color: #D0E8FF;
  width: 1px;
  z-index: 98;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(0%, 0%);
}
.stepRight {
  height: 100%;
	margin-left: 20rpx;
}
.stepRight .title{
  width: fit-content;
  padding: 3px 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1890FF;
  border-radius: 5px;
}
.stepRight .content {
  font-size: 12px;
  height: 100%;
  color: #666666;
  padding: 5rpx 0 50rpx 0;
}
.text-focus {
  color: #1890FF;
}
.num-img {
  width: 48rpx;
  height: 48rpx;
}