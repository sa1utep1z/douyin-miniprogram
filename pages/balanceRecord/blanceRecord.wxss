/* pages/balanceRecord/blanceRecord.wxss */


page{
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  background: white;
  align-items: center;
}
.tab-view{
  width: 100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 2rpx;
  justify-content: space-between;
}

.tab-index{
  width: 250rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  position: relative;
}
.tab-select {
  color: #018EFF;
}
.tab-select ::after{
  content: "";
  width: 40rpx;
  height: 4rpx;
  background: #018EFF;
  border-radius: 2rpx;
  position: absolute;
  bottom: 0rpx;
  left: 105rpx;
}
.list-wrap {
  width: 100%;
  flex: 1;
  overflow: scroll;
}
.list-view {
  width: 100%;
  height: 100%;
}
.record-view{
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.head-view {
  width: 240rpx;
}
.status-error {
  color: #E43700;
}
.right-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-around;
}
.item-type {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}
.item-time {
  width: 240rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  margin-top: 8rpx;
}
.item-status {
  width: 100%;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  text-align: right;
  color: #999999;
  line-height: 34rpx;
  margin-top: 8rpx;
}
.item-amt {
  width: 150rpx;
  height: 44rpx;
  font-size: 32rpx;
  text-align: right;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
}

.item-amt-income {
  color: #FF830B;
}
.divider {
  width: 686rpx;
  height: 2rpx;
  margin-left: 32rpx;
  background: #F8F8F8;
}
.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}