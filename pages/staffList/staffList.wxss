/* pages/staffList/staffList.wxss */
page{
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  align-items: center;
}
.date-view {
  width: 686rpx;
  display: flex;
  padding: 24rpx;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-radius: 12rpx;
  margin-top: 24rpx;
  background-color: white;
}

.date-img {
  width: 30rpx;
  height: 30rpx;
}
.scroll-view {
  width: 100%;
  flex:1;
}

.staff-view {
  width: 686rpx;
  background-color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  box-sizing: border-box;
  padding: 32rpx;
  margin-top: 24rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.staff-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 32rpx;
  align-items: center;
  justify-content: space-between;

}
.staff-row:nth-child(1){
  margin-top: 0;
}
.color_blue {
  color: #018EFF;
}

.item_left{ 
  width: 120rpx;
}

.item_right{
  flex: 1;
  text-align: right;
}

.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}