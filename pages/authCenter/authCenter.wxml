<!--pages/authCenter/AuthCenter.wxml-->
<view class="container">
  <view class="dialog-content">
      <view class="input-view-required">
        <input adjust-position="{{false}}"  bindinput="onInputName" placeholder="请输入您的真实姓名" value="{{name}}" class="input-view-input"></input>
      </view>
      <view class="info-view">
        <input adjust-position="{{false}}" bindinput="onInputIDCard" placeholder="请输入您的身份证号" type="idcard" value="{{idCard}}" placeholder-class="input-view-placeholder" class="input-view-input"></input>
      </view>
    </view>
  <view class="btn-row">
    <view class="btn-confirm" bindtap="handleConfirm">提交认证</view>
  </view>
  <view class="law_text">
    <text>提交认证代表您已同意</text><text class="law-text-blue" bindtap="jumpPrivacy" >众鼎人力《用户协议》、《隐私协议》</text>
  </view>
</view>
