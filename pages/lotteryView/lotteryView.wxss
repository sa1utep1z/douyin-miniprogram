/* pages/lotteryView/lotteryView.wxss */
page{
  width: 100%;
  height: 100%;
  background-image: url('https://labor-prod.oss-cn-shenzhen.aliyuncs.com/assist/lottery_backend.png');
  background-size: 100% 100%;
}
.lotteryContainer {
  padding: 30rpx 0;
}
.lottery-title {
  text-align: center;
  font-size: 70rpx;
  font-weight: bolder;
  color: white;
  line-height: 140rpx;
  width: 92%;
  margin: 0 auto;
}
.lottery-draw {
  color: white;
  font-size: 28rpx;
  font-weight: bolder;
  text-align: right;
  padding-right: 50rpx;
}
.lottery-bottom {
  width: 92%;
  padding: 30rpx 20rpx;
  margin: 50rpx auto 0 auto;
}
.activity-explain {
  font-size: 30rpx;
  text-align: center;
  padding-bottom: 30rpx;
  font-weight: bolder;
}
.activity-m {
  font-size: 24rpx;
  padding-bottom: 25rpx;
}
.activity-m-t {
  font-weight: bolder;
  padding: 15rpx;
}
.activity-m-b {
  padding-left: 15rpx;
  line-height: 36rpx;
}
.activity-model {
  display: flex;
  font-size: 24rpx;
  text-align: left;
  padding-bottom: 25rpx;
}
.activity-model-l {
  flex: 1;
  text-align: center;
}
.activity-model-r {
  flex: 2;
}
.header-class {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 20rpx;
}
.cell-class {
  font-size: 20rpx;
}

/* tab */
.tabView {
  background-color: white;
  margin-top: 15rpx;
  padding: 30rpx 15rpx;
}
.scroll-view {
  width: 90%;
  margin: 0 auto;
  max-height: 960rpx;
}
.draw-view {
  display: flex;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  align-items: center;
  line-height: 56rpx;
  font-size: 28rpx;
  border-bottom: 3rpx solid #f2f2f2;
}
.draw-col-l {
  flex: 2;
}
.draw-col-r {
  flex: 1;
  text-align: center;
  color: #e7281a;
}
.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}
.van-divider-container {
  width: 100%;
  display: block;
}
/* 弹窗 */
.dialogContainer {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.5);
}
.dialog {
  width: 620rpx;
  height: 820rpx;
  background: white;
  border-radius: 12px;
  box-sizing: border-box;
  background-color: #fce3b0;
  /* background-image: url('https://labor-prod.oss-cn-shenzhen.aliyuncs.com/assist/winning2.png'); */
}
.dialog-content {
  width: 80%;
  height: 600rpx;
  margin: 0 auto;
}
.prize-leavl {
  height: 140rpx;
  line-height: 140rpx;
  font-weight: bolder;
  color: #464646;
  text-align: center;
  font-size: 66rpx;
  padding: 30rpx 0;
}
.prize-img-view {
  width: 60%; 
  height: 300rpx;
  text-align: center;
  margin: 0 auto;
}
.prize-img-view image {
  width: 100%;
  max-height: 300rpx;
}
.prize-name {
  color: #fd421d;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  font-weight: bolder;
  font-size: 40rpx;
}
.btn-row {
  width: 80%;
  margin: 50rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.btn-confirm {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fd421d;
  color: white;
  border-radius: 40rpx;
  text-align: center;
}
.btn-again {
  color: #fd421d;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
}

.btn-again text {
  font-size: 48rpx;
}