/* pages/lotteryView/lotteryView.wxss */
page{
  width: 100%;
  height: 100%;
  background-image: url('https://labor-prod.oss-cn-shenzhen.aliyuncs.com/assist/lottery_backend.png');
  background-size: 100% 100%;
}
.lotteryContainer {
  padding: 30rpx 0;
}
.lottery-title {
  text-align: center;
  font-size: 70rpx;
  font-weight: bolder;
  color: white;
  height: 140rpx;
  line-height: 140rpx;
}
.lottery-draw {
  color: white;
  font-size: 28rpx;
  font-weight: bolder;
  text-align: right;
  padding-right: 50rpx;
}
.lottery-bottom {
  width: 92%;
  padding: 30rpx 20rpx;
  margin: 50rpx auto 0 auto;
}
.activity-explain {
  font-size: 30rpx;
  text-align: center;
  padding-bottom: 30rpx;
  font-weight: bolder;
}
.activity-m {
  font-size: 24rpx;
  padding-bottom: 25rpx;
}
.activity-m-t {
  font-weight: bolder;
  padding: 15rpx;
}
.activity-m-b {
  padding-left: 15rpx;
  line-height: 36rpx;
}
.activity-model {
  display: flex;
  font-size: 24rpx;
  text-align: left;
  padding-bottom: 25rpx;
}
.activity-model-l {
  flex: 1;
  text-align: center;
}
.activity-model-r {
  flex: 2;
}
.header-class {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 20rpx;
}
.cell-class {
  font-size: 20rpx;
}

/* tab */
.tabView {
  background-color: white;
  margin-top: 15rpx;
  padding: 30rpx 15rpx;
}
.scroll-view {
  width: 90%;
  margin: 0 auto;
  max-height: 960rpx;
}
.draw-view {
  display: flex;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  align-items: center;
  line-height: 56rpx;
  font-size: 28rpx;
  border-bottom: 3rpx solid #f2f2f2;
}
.draw-col-l {
  flex: 2;
}
.draw-col-r {
  flex: 1;
  text-align: center;
  color: #e7281a;
}
.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}
.van-divider-container {
  width: 100%;
  display: block;
}