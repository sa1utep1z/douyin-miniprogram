/* pages/expandPosterView/expandPosterView.wxss */
.poster-button-container {
  position: fixed;
  top: 0;
  left: 35rpx;
  width: 642rpx;
  margin: 0 auto;
  background-color: #d3ebf7;
  padding: 15rpx 20rpx 30rpx 20rpx;
}
.poster-button-view {
  width: 160rpx;
  height: 60rpx;
  float: left;
  text-align: center;
  font-size: 26rpx;
  line-height: 60rpx;
}
.poster-button-view-active {
  border-radius: 20rpx;
  background-color: #56c6fd;
  color: #f8f6f6;
}
.scroll-view {
  position: fixed;
  top: 150rpx;
  left: 35rpx;
  width: 680rpx;
  margin: 0 auto;
  max-height: 1600rpx;
  background-color: #d3ebf7;
}
.img-view {
  float: left;
  width: 280rpx;
  height: 400rpx;
  margin: 30rpx 28rpx;
}
.poster-img {
  width: 280rpx;
  height: 360rpx;
  border: 2rpx solid #f8f6f6;
  border-radius: 15rpx;
}
.poster-name {
  width: 280rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #330d0d;
}
.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  display: block;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  font-size: 18rpx !important;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}
.van-divider-container {
  width: 100%;
  display: block;
}