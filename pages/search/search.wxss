/* pages/search/search.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  position: relative;
}
.empty-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-text{
  width: 446rpx;
  height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 44rpx;
}
.empty-button {
  width: 320rpx !important;
  height: 80rpx !important;
  background: #018EFF;
  border-radius: 40rpx;
  width: 192px;
  font-size: 32rpx;
  margin-top: 60rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 80rpx;
}
.navigator {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
}
.title-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-box {
  width: 424rpx;
  background: rgba(0, 0, 0,0.07);
  border-radius: 32rpx;
  display: flex;
  margin-left: 32rpx;
  flex-direction: row;
  align-items: center;
}
.search-text {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}
.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 24rpx;
  margin-right: 4rpx;
}
.nav-back {
  width: 32rpx;
  height: 32rpx;
  margin-left: 24rpx;
  margin-right: 4rpx;
}
.clear-text {
  width: 32rpx;
  height: 32rpx;
  padding: 0 24rpx;
}

.scroll-view {
  width: 100%;
  height: 100%;
  overflow: scroll;
}
.scroll-view-holder{
  width: 100%;
  height: 100%;
  display: flex;
  overflow: scroll;
  flex-direction: column;
  align-items: center;
}
.scroll-view::-webkit-scrollbar {
  display: none;
}
.scroll-view-holder::-webkit-scrollbar {
  display: none;
}

.job-view {
  width: 686rpx;
  height: 352rpx;
  margin-top: 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 24rpx 24rpx 0 24rpx;
}
.job-head-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.job-image {
  width: 208rpx;
  height: 208rpx;
  border-radius: 6rpx;
}
.job-right-column {
  flex: 1;
  display: flex;
  margin-left: 24rpx;
  flex-direction: column;
  align-items: flex-start;
}
.job-title {
  width: 406rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
}
.job-tag-row {
  width: 100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-top: 16rpx;
  justify-content: flex-start;
}
.job-tag {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  padding: 0 8rpx;
  background: #E1F2FF;
  color: #018EFF;
  line-height: 34rpx;
  border-radius: 4rpx;
  margin-left: 12rpx;
}
.job-price-row {
  width: 100%;
  height: 48rpx;
  display:flex;
  margin-top: 22rpx;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
}
.job-price {
  height: 48rpx;
  font-size: 36rpx;
  font-family: Roboto-Bold, Roboto;
  font-weight: bold;
  color: #FF830B;
  line-height: 48rpx;
}
.job-price-unit {
  font-size: 24rpx;
}
.job-position {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  margin-bottom: 4rpx;
  line-height: 34rpx;
}

.van-divider {
  margin: 0 !important;
  margin-top: 24rpx !important;
  height: 2rpx !important;
}
.job-action-row {
  width: 100%;
  height: 94rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.job-des {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 34rpx;
  margin-right: 30rpx;
}
.job-share {
  width: 132rpx;
  height: 46rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #018EFF;
  text-align: center;
  line-height: 46rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  margin-right: 16rpx;
  border: 2rpx solid #018EFF;
}
.job-inner-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.job-register {
  width: 132rpx;
  height: 46rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
  text-align: center;
  line-height: 46rpx;
  background: #018EFF;
  border-radius: 4rpx;
  border: 2rpx solid #018EFF;
}
.status-loading {
  width: 100%;
  padding: 24rpx 30rpx;
  text-align: center;
}
.status-finish {
  width: 100% ;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.status-finish .van-divider {
  color: #999999 !important;
  width: 100% !important;
  font-size: 24rpx !important;
  margin: 0 !important;
}