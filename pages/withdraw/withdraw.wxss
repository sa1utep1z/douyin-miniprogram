/* pages/withdraw/withdraw.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view-target {
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx
}
.view-target-row{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
}
.view-target-img {
  width: 80rpx;
  height: 80rpx;
}
.view-target-account {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  margin-left: 20rpx;
  line-height: 40rpx;
}
.view-target-time {
  width: 300rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  margin-left: 20rpx;
  margin-top: 8rpx;
}
.view-target-title {
  width: 84rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 40rpx;
}

.amt-view{
  width: 686rpx;
  height: 296rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 32rpx;
  box-sizing: border-box;
}
.amt-title {
  width: 118rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 40rpx;
}
.amt-row{
  width: 100%;
  display: flex;
  margin-top: 54rpx;
  flex-direction: row;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: solid 2rpx #EFEEEE;
}
.amt-label {
  width: 64rpx;
  height: 66rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #222222;
  line-height: 66rpx;
}
.amt-input {
  flex: 1;
  font-size: 48rpx;
  font-weight: 500;
  color:#222222;
  line-height: 32rpx;
}
.input-placeholder {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 24rpx
}
.amt-tip-row{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.amt-tip {
  width: 100%;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  margin-top: 16rpx;
}
.action-all {
  color: #018EFF;
}

.action-btn {
  width: 622rpx;
  height: 92rpx !important;
  margin-top: 56rpx;
  background: #018EFF !important;
  border-radius: 50rpx;
  color: white;
  opacity: 1;
}

button[disabled] {
  width: 622rpx !important;
  height: 92rpx !important;
  background: #018EFF !important;
  border-radius: 50rpx;
  color: white !important;
  opacity: 0.4;
}
